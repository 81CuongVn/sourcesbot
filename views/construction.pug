doctype html
html
    head
        title= title
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" type="image/png" href="/images/sourcebot/yellow.png?v1")
        link(rel='stylesheet', href='/stylesheets/animate.css?v1')
        link(rel='stylesheet', href='/stylesheets/landing.css?v1')
    body(class="yellow")
        block content
            div(class="menu")
                div(id="background"): div(class="background-img", data-depth="0.2")
                div(class="menu-body")
                    p(class="menu-title text-shadow animated zoomIn") Sourcebot
                    div(class="menu-img-holder animated jackInTheBox"): img(src="/images/sourcebot/yellow_faded.png?v1", class="menu-img")
                    div(class="menu-buttons-holder")
                        div(class="menu-buttons")
                            p(style="color: white; text-align: center; font-size: 30px" class="animated bounceInUp text-shadow")
                                | Website under construction... Come back later...
                            div(class="menu-buttons-holder")
                                div(class="menu-buttons")
                                    a(class="menu-button delay0-4 animated bounceInUp", href="/") Retry
                            span(class="copyright animated bounceInLeft text-shadow") Â© 2019 TheSourceCode
    script(src="/javascripts/parallax.js?v1")
    script new Parallax(document.getElementById('background'));